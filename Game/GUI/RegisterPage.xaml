<Page x:Class="GUI.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"></ColumnDefinition>
			<ColumnDefinition Width="*"></ColumnDefinition>
			<ColumnDefinition Width="*"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<StackPanel Margin="0,10,0,10" Grid.Column="1">
			<Label FontSize="30" HorizontalAlignment="Center">Register</Label>
			<Label HorizontalAlignment="Center">Name</Label>
			<TextBox x:Name="NameTextBox"></TextBox>
			<Label HorizontalAlignment="Center">Password</Label>
			<TextBox x:Name="PasswordTextBox"></TextBox>
			<Label HorizontalAlignment="Center">Email</Label>
			<TextBox x:Name="EmailTextBox"></TextBox>
			<Label HorizontalAlignment="Center">Date Of Birth</Label>
			<DatePicker x:Name="AgeDatePicker"/>
			<Button x:Name="RegisterConfirmButton" HorizontalAlignment="Right" MinHeight="30px" MinWidth="60px" Click="RegisterConfirmButton_Click">Register</Button>
			<Label HorizontalAlignment="Right" MouseUp="RedirectToLoginPage">Or login here</Label>
		</StackPanel>
	</Grid>
</Page>
